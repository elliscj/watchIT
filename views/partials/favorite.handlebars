<div class="col-sm-3 col-lg-3 col-md-3 eachMovie">
  <button
    type="button"
    class="btnModal"
    data-toggle="modal"
    data-target="#exampleModal{{index}}"
    data-whatever="@{{index}}"
  >
    <img src="{{poster_url}}" />
  </button>
  <div
    class="modal fade"
    id="exampleModal{{index}}"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
    style="display: none"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content col-sm-12">
        <div class="col-sm-6 moviePosterInModal">
          <a href="{{trailer_url}}"><img src="{{poster_url}}" /></a>
        </div>
        <br />
        <div class="col-sm-6 movieDetails">
          <div class="movieName">{{title}}</div>
          <br />
          <div class="linkToTrailer">
            <a href="{{trailer_url}}"><span
                class="glyphicon glyphicon-play"
                style="color: red"
              ></span>&nbsp;Play trailer</a>
          </div>
          {{! <br />
          <div class="release">Release Date: 2021-12-17</div>
          <br /> }}
          <div class="overview">
            {{description}}
          </div>
          {{! <br />
          <div class="rating">Rating: 7.5/10</div>
          <br /> }}
          <div
            id="remove"
            class="col-sm-5 btn btn-primary add-to-favorites"
            data-title="{{title}}"
          >
            Remove
          </div>
          <div id="add-review" class="col-sm-5 btn btn-primary">Add Review</div>
        </div>
      </div>
    </div>
  </div>
</div>